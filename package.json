{
  "name": "angular-compiler-bundled",
  "description": "@angular/compiler bundled with rollup to css",
  "version": "15.0.0",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manbearwiz/angular-compiler-bundled.git"
  },
  "author": "Kevin Brey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manbearwiz/angular-compiler-bundled/issues"
  },
  "homepage": "https://github.com/manbearwiz/angular-compiler-bundled#readme",
  "devDependencies": {
    "@angular/compiler": "^15.0.0",
    "@biomejs/biome": "1.5.3",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "rollup": "^4.12.0",
    "semantic-release": "^23.0.2"
  },
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "files": [
    "/dist"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "lint-staged": {
    "*.{js,ts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  }
}
